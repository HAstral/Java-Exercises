package samp;
import java.util.*;
public class no7 {
	public static void main(String []args) {
	Scanner scanner=new Scanner(System.in);
	System.out.print("Enter a number:");
	int num=scanner.nextInt();
	while(num>0)
	
	{
		
		while(num>0)
		{
			int i=2;
			while(num%i!=0)
				{i++;}
			if (num==i)
				System.out.print(num+"is prime");
			else 
				System.out.print(num+"is not prime");
	}
		System.out.print("Enter a number:");
		num=scanner.nextInt();
	}
}
}	
